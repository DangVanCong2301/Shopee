                    @foreach (var store in Model.Stores) {
                        <div class="store__mobile-item">
                            <a href="/shop/@store.PK_iStoreID" class="store__mobile-item-link">
                                <div class="store__mobile-item-img"
                                    style="background-image: url(/img/@store.sImageAvatar);">
