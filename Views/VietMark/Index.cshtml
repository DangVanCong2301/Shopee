@model ProductViewModel

@{
    ViewData["Title"] = "Viet Mark";
}

<div class="app__container">
    <div class="grid wide">
        <div class="banner">
            <div class="banner-container">
                <div class="banner-left">
                    <div class="banner-left-content">
                        <div class="banner-left-content__top">
                            <a href="" class="banner-left-content__top-link">
                                <div class="banner-home__content-left-container">
                                    <div class="banner-home__content-left-container-text">
                                        <h1 class="banner-home__content-left-title">
                                            Mua sản phẩm có giảm giá tại gia dụng tiện ích VietMark
                                        </h1>
                                        <p class="banner-home__content-left-desc">
                                            Ấm siêu tốc klarstein aquavita với thiết kế kiểu dáng giống như một chiếc ấm uống trà cổ điển, 
                                            mang đến không gian căn bếp nhà bạn vẻ đẹp sang trọng và tinh tế.
                                        </p>
                                        <button class="banner-home__content-left-btn">Xem ngay</button>
                                        <div class="banner-home__content-left-container-img" style="background-image: url(/img/vietmark/product/am_sieu_toc_1.jpg);">
                                            
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <a href="" class="banner-left-content__top-link">
                                <div class="banner-home__content-left-container">
                                    <div class="banner-home__content-left-container-text">
                                        <h1 class="banner-home__content-left-title">
                                            Mua sản phẩm có giảm giá tại gia dụng tiện ích VietMark
                                        </h1>
                                        <p class="banner-home__content-left-desc">
                                            Ấm siêu tốc klarstein aquavita với thiết kế kiểu dáng giống như một chiếc ấm uống trà cổ điển, 
                                            mang đến không gian căn bếp nhà bạn vẻ đẹp sang trọng và tinh tế.
                                        </p>
                                        <button class="banner-home__content-left-btn">Xem ngay</button>
                                        <div class="banner-home__content-left-container-img" style="background-image: url(/img/vietmark/product/am_sieu_toc_1.jpg);">
                                            
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <a href="" class="banner-left-content__top-link">
                                <div class="banner-home__content-left-container">
                                    <div class="banner-home__content-left-container-text">
                                        <h1 class="banner-home__content-left-title">
                                            Mua sản phẩm có giảm giá tại gia dụng tiện ích VietMark
                                        </h1>
                                        <p class="banner-home__content-left-desc">
                                            Ấm siêu tốc klarstein aquavita với thiết kế kiểu dáng giống như một chiếc ấm uống trà cổ điển, 
                                            mang đến không gian căn bếp nhà bạn vẻ đẹp sang trọng và tinh tế.
                                        </p>
                                        <button class="banner-home__content-left-btn">Xem ngay</button>
                                        <div class="banner-home__content-left-container-img" style="background-image: url(/img/vietmark/product/am_sieu_toc_1.jpg);">
                                            
                                        </div>
                                    </div>
                                </div>
                            </a>          
                        </div>
                        <div class="banner-left-content__top-btn">
                            <i class="uil uil-angle-left banner-left-content__top-btn-icon banner-left-content__top-btn-icon-prev"></i>
                            <i class="uil uil-angle-right banner-left-content__top-btn-icon banner-left-content__top-btn-icon-next"></i>
                        </div>
                                
                        <div class="banner-left-content__bottom">
                            <div class="banner-left-content__bottom-pagination">

                            </div>
                        </div>
                        <div class="banner-left-content__loading"></div>
                    </div>
                </div>
                <div class="banner-right">
                    <div class="banner-right__content">
                        <div class="banner-right__content-top" style="background-image: url(/img/banner_my_pham.jpg);">
                            <div class="banner-right__content-top-loading"></div>
                        </div>
                        <div class="banner-right__content-bottom" style="background-image: url(/img/ngat_ngay.jpg);">
                            <div class="banner-right__content-bottom-loading"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="category">
            <div class="category-header">
                <div class="category-header__title">Danh mục</div>
                <div class="category-header__arrow">
                    <i class="fa-solid fa-arrow-left"></i>
                    <i class="fa-solid fa-arrow-right"></i>
                </div>
            </div>
            <div class="category-container">
                <div class="category-content">
                    <ul class="row sm-gutter category-list">
                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="success">
            <div class="success-header">
                <div class="success-title">Gợi ý hôm nay</div>
            </div>
            <div class="success-container">
                <div class="home-product">
                    <div class="row sm-gutter product__container">
                        @foreach (var product in Model.Products) {
                            <div class="col l-2 c-6 m-4">
                                <a class="home-product-item" href="/product/detail/@product.PK_iProductID">
                                    <div class="home-product-item__img" style="background-image: url(/img/@product.sImageUrl);">
                                        <div class="home-product-item__img-loading">
                                            <i class="uil uil-shopping-bag home-product-item__img-loading-icon"></i>
                                        </div>
                                    </div>
                                    <h4 class="home-product-item__name">
                                        @product.sProductName
                                        <div class="home-product-item__name-loading">
                                            <div class="home-product-item__name-loading-line"></div>
                                            <div class="home-product-item__name-loading-line"></div>
                                        </div>
                                    </h4>
                                    <div class="home-product-item__price">
                                        <span class="home-product-item__price-old">
                                            1.200 000đ
                                            <div class="home-product-item__price-old-loading"></div>
                                        </span>
                                        <span class="home-product-item__price-current">
                                            @product.dPrice đ
                                            <div class="home-product-item__price-current-loading"></div>
                                        </span>
                                    </div>
                                    <div class="home-product-item__action">
                                        <span class="home-product-item__like home-product-item__like--liked">
                                            <i class="home-product-item__like-icon-empty far fa-heart"></i>
                                            <i class="home-product-item__like-icon-fill fas fa-heart"></i>
                                            <div class="home-product-item__like-loading"></div>
                                        </span>
                                        <div class="home-product-item__rating">
                                            <i class="home-product-item__star--gold fas fa-star"></i>
                                            <i class="home-product-item__star--gold fas fa-star"></i>
                                            <i class="home-product-item__star--gold fas fa-star"></i>
                                            <i class="home-product-item__star--gold fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <div class="home-product-item__rating-loading"></div>
                                        </div>
                                        <span class="home-product-item__sold"> 
                                            88 Đã bán
                                            <div class="home-product-item__sold-loading"></div>
                                        </span>
                                    </div>
                                    <div class="home-product-item__origin">
                                        <span class="home-product-item__brand">
                                            Viet Mark
                                            <div class="home-product-item__brand-loading"></div>
                                        </span>
                                        <span class="home-product-item__origin-name">
                                            Hà Nội
                                            <div class="home-product-item__origin-name-loading"></div>
                                        </span>
                                    </div>
                                    <div class="home-product-item__favourite">
                                        <i class="fas fa-check"></i>
                                        <span>Yêu thích</span>
                                    </div>
                                    <div class="home-product-item__sale-off">
                                        <span class="home-product-item__sale-off-percent">53%</span>
                                        <span class="home-product-item__sale-off-label">GIẢM</span>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <ul class="pagination home-product__pagination">
                    @if (Model.CurrentPage > 1) {
                        <li class="pagination-item">
                            <a href="/Home/Index?currentPage=@(Model.CurrentPage - 1)" class="pagination-item__link">
                                <i class="pagination-item__icon fas fa-angle-left"></i>
                            </a>
                        </li>
                    }
                    @for (int i = 1; i <= Model.TotalPage; i++) {
                        @if (i == Model.CurrentPage) {
                            <li class="pagination-item pagination-item--active">
                                <a href="/Home/Index?currentPage=@i" class="pagination-item__link">@i</a>
                            </li>
                        } else {
                            <li class="pagination-item">
                                <a href="/Home/Index?currentPage=@i" class="pagination-item__link">@i</a>
                            </li>
                        }
                    }
                    @* <li class="pagination-item">
                        <a href="" class="pagination-item__link">...</a>
                    </li> *@
                    @if (Model.CurrentPage < Model.TotalPage) {
                        <li class="pagination-item">
                            <a href="/Home/Index?currentPage=@(Model.CurrentPage + 1)" class="pagination-item__link">
                                <i class="pagination-item__icon fas fa-angle-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<script src="~/js/main.js"></script>
<script src="~/js/main_loading.js"></script>



